---
const { level } = Astro.props as { level: 'Easy' | 'Medium' | 'Hard' }

const styles =
  level === 'Easy'
    ? 'bg-emerald-100 text-emerald-700 ring-1 ring-emerald-200'
    : level === 'Medium'
      ? 'bg-amber-100 text-amber-800 ring-1 ring-amber-200'
      : 'bg-rose-100 text-rose-700 ring-1 ring-rose-200'
---

<span class={`inline-flex items-center rounded-full px-2 py-0.5 text-xs font-semibold ${styles}`}>
  {level}
</span>
