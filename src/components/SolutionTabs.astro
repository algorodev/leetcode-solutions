---
const { title = 'Solution' } = Astro.props as { lang?: string; title?: string }
---

<div class="not-prose mt-4 rounded-xl border overflow-hidden">
  <div class="flex items-center justify-between px-4 py-2 border-b bg-slate-50">
    <span class="text-sm font-medium">{title}</span>
    <button
      class="text-xs"
      onclick="
        const btn = this;
        const code = btn.closest('.not-prose').querySelector('pre code')?.textContent || '';
        navigator.clipboard.writeText(code).then(() => {
          btn.textContent = 'Copied!';
          btn.style.color = '#16a34a';
          setTimeout(() => {
            btn.textContent = 'Copy';
            btn.style.color = '';
          }, 2000);
        });
      "
    >
      Copy
    </button>
  </div>
  <slot />
</div>
