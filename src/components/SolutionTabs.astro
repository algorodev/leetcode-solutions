---
const { lang = 'ts', title = 'Solution' } = Astro.props as { lang?: string; title?: string }
---

<div class="not-prose mt-4 rounded-xl border overflow-hidden">
  <div class="flex items-center justify-between px-4 py-2 border-b bg-slate-50">
    <span class="text-sm font-medium">{title} Â· {lang.toUpperCase()}</span>
    <button
      class="text-xs underline"
      onclick="navigator.clipboard.writeText(this.closest('.not-prose').querySelector('pre code')?.textContent || '')"
    >
      Copy
    </button>
  </div>
  <pre class="overflow-x-auto p-4"><code><slot /></code></pre>
</div>
