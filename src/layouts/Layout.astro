---
import '../styles/global.css'
import Meta from '../components/Meta.astro'

type LayoutProps = {
  title?: string;
  description?: string;
  url?: string;
  image?: string;
};

const { title = 'LeetCode Solutions', description, url, image } = Astro.props as LayoutProps
---

<html lang='en'>
  <head>
    <Meta title={title} description={description} url={url} image={image}/>
  </head>
  <body class='min-h-screen bg-slate-50 text-slate-900 antialiased'>
    <header class='border-b bg-white/95 backdrop-blur-sm sticky top-0 z-10'>
      <div class='mx-auto max-w-7xl px-4 sm:px-6 py-4 flex items-center gap-3'>
        <a href='/' class='font-semibold text-lg sm:text-base'>lc.algoro.dev</a>
        <nav class='ml-auto text-sm text-slate-500'>
          <a class='hover:text-slate-800 px-2 py-1 rounded-md hover:bg-slate-100 transition-colors'
             href='https://www.algoro.dev/' target='_blank' rel='noopener noreferrer'>
            Portfolio
          </a>
        </nav>
      </div>
    </header>
    <main class='mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6 sm:py-8'>
      <slot/>
    </main>
  </body>
</html>
